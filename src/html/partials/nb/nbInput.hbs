<div class="Inputfield {{default class "uk-width-1-1"}}{{#if title}} nb-form-required{{/if}}" id="wrap_nb-form-{{page.name}}_{{name}}">

{{#if label}}
	<label class="uk-form-label" for="nb-form-{{page.name}}_{{name}}">{{label}}</label>
{{/if}}

	<div class="nb-form-content">
		{{#if optional}}
			<div class="uk-text-small">Optional</div>
		{{/if}}		
		<div role="alert"></div>
		{{#if (eq type "textarea")}}

		<textarea id="nb-form-{{page.name}}_{{name}}" class="uk-textarea" name="{{name}}" rows="{{default rows "9"}}" {{#if title}}title="{{title}}" required{{/if}}></textarea>

		{{else}}
		{{#if (eq type "submit")}}

		<button id="nb-form-{{page.name}}_{{name}}" class="uk-button uk-button-{{default style "primary"}}" name="{{name}}" value="{{value}}" type="{{type}}">
		{{value}}
		{{#if (eq pull "left")}}
			{{#if icon}}
				{{> renderIcon name=icon class="icon-left"}}
			{{/if}}
			{{label}}
		{{else}}
			{{label}}
			{{#if icon}}
				{{> renderIcon name=icon}}
			{{/if}}
		{{/if}}		
		</button>

		{{else}}

		<input id="nb-form-{{page.name}}_{{name}}" class="uk-input" name="{{name}}" type="{{default type "text"}}" {{#if title}}title="{{title}}" required{{/if}}{{#if placeholder}} placeholder="{{placeholder}}"{{/if}}>

		{{/if}}
		{{/if}}
	</div>
</div>
