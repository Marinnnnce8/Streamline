<div class="items items-{{type}}{{#if (eq type "services")}} uk-box-shadow-large{{/if}}" data-uk-scrollspy="cls: uk-animation-fade; delay: 250">
	{{#if itemLabel}}
		<p class="uk-text-uppercase uk-text-secondary label">{{itemLabel}}</p>
	{{/if}}

	{{#> ukGrid class=gridClass dataUkScrollspy="cls: uk-animation-fade; delay: 300; target: .uk-grid>div"}}
		{{#*inline "cells"}}

		{{#if (eq type "images")}}
			{{> images items=items}}
		{{/if}}

		{{#if (eq type "numbers")}}
			{{> numbers items=items}}
		{{/if}}

		{{#if (eq type "services")}}
			{{> services items=items}}
		{{/if}}

		{{#if (eq type "image-links")}}
			{{> imageLinks items=items}}
		{{/if}}
		
		{{#if (eq type "links")}}
			{{> links items=items}}
		{{/if}}

		{{/inline}}
	{{/ukGrid}}
</div>