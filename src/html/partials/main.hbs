<!doctype html>
<html lang="en-gb" class="template-{{page.template.name}}">
<head>
	<meta name="robots" content="noindex, nofollow">

	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="format-detection" content="telephone=no">

	<title>{{page.meta_title}}</title>

	<meta name="description" content="This page is called {{page.title}}">

	<link rel="shortcut icon" href="./favicon.ico">

	<link rel="stylesheet" href="./css/uikit-theme.min.css" />
	<link rel="stylesheet" href="./css/mmenu-theme.min.css" />
	<link rel="stylesheet" href="./css/main.min.css" />
</head>
<body>

	<div>

		<header class="header" data-uk-sticky="media: 960; animation: uk-animation-slide-top; show-on-up: true;">
			<nav class="uk-background-primary nav-top uk-flex uk-flex-right uk-flex-middle uk-visible@m">
				<div class="uk-flex uk-flex-right uk-flex-middle">
					<div class="uk-flex uk-flex-middle">
						<a class="uk-text-small" href="#">News</a>
						<a class="uk-text-small" href="#">Contact</a>
					</div>
					<div class="uk-flex uk-flex-middle">
						<a href="#" aria-label="Visit our Facebook page">{{> renderIcon name="facebook"}}</a>
						<a href="#" aria-label="Visit our Linkedin page">{{> renderIcon name="linkedin"}}</a>
					</div>
				</div>
				{{> ukButton link="#" style="secondary" label="Get a quote" icon="arrow-right"}}
			</nav>
			<nav class="uk-navbar-container uk-navbar uk-flex-between" data-uk-navbar>

				<div class="uk-navbar-left">
					<a href="./" class="uk-navbar-item uk-logo uk-position-relative">
						<img src="{{logo}}" alt="{{nb.siteName}} Logo">
					</a>
				</div>

				<div class="uk-navbar-right">
					<div id="nav" class="uk-visible@m">
						{{> renderNavigation items=menu active=page.name}}
					</div>
					<div class="uk-flex uk-flex-middle">
						<button class="circle-button search-button uk-border-circle uk-position-relative uk-margin-small-left" aria-label="Search">{{> renderIcon name="search"}}<span role="presentation"></span></button>
						<div data-uk-dropdown="mode: click; boundary: .header; boundary-align: true;" class="uk-width-1-1 search-menu uk-text-right">									
							<form class="uk-search uk-search-default">
								<span class="uk-search-icon-flip" data-uk-search-icon></span>
								<input class="uk-search-input" type="search" placeholder="Search...">
							</form>		
						</div>						
						<a href="#" class="circle-button uk-border-circle uk-position-relative uk-margin-small-left uk-flex uk-flex-middle uk-flex-center uk-visible@m" aria-label="Login">{{> renderIcon name="user"}}</a>
					</div>
					<a href="#" class="uk-navbar-toggle uk-position-relative uk-hidden@m uk-border-circle uk-margin-small-left" aria-label="Toggle Navigation" data-uk-toggle="target: #mmenu;cls: menu-hidden;">
						<span class="uk-position-center" role="presentation"></span>
					</a>
				</div>

			</nav>
		</header>

		<main class="uk-margin-bottom">

			{{#if page.banner}}
				{{> banner}}
				{{#if (neq page.name "home")}}
					{{#> ukContainer size=(default page.ukContainer ukContainer) class="uk-margin-top"}}
						{{#*inline "out"}}
							{{> ukBreadcrumb}}
							<h1>{{page.h1}}</h1>
						{{/inline}}
					{{/ukContainer}}				
				{{/if}}
			{{/if}}

			{{#> main}}{{/main}}

		</main>

		<footer class="footer uk-padding-large uk-padding-remove-horizontal">
			<div class="uk-container uk-text-center">

				<div class="legal uk-margin-small-bottom">
					<ul>
					{{#each legal}}
						<li>
							<a href="#">{{this}}</a>
						</li>
					{{/each}}
					</ul>
				</div>

				<div class="copyright uk-margin-small-bottom">Copyright &copy; {{year}} {{nb.clientName}}. All rights reserved.</div>

				<div class="watermark">
					Website by <a title="NB Communication - Digital Marketing Agency" target="_blank" rel="noopener" href="https://www.nbcommunication.com/">NB <img src="https://brand.nbcommunication.com/logo/web/nb.png" alt="NB Communication Ltd Logo" width="16" height="16" loading="lazy"></a>
				</div>

			</div>
		</footer>
	</div>

	<div class="mmenu-overlay uk-hidden">
		<div id="mmenu">
			{{!-- <form class="uk-search uk-search-default uk-margin-left uk-hidden@m">
				<span class="uk-search-icon-flip" data-uk-search-icon></span>
				<input class="uk-search-input uk-border-pill" type="search" placeholder="Search...">
			</form>			 --}}
			{{> renderNavigation items=menu mobile=true active=page.name}}
		</div>
		<div class="mmenu-bg" role="presentation"></div>
	</div>

	<svg class="svg">
		<clipPath id="videoShapeTop" clipPathUnits="objectBoundingBox"><path d="M0.999,0.336 C0.62,1,0.392,1,-0.001,0.91 L-0.001,0.831 C-0.001,0.831,0.22,0.961,0.484,0.825 C0.748,0.689,0.999,0.009,0.999,0.009 L0.999,0.336"></path></clipPath>
	</svg>
	<svg class="svg">
		<clipPath id="videoShapeBottom" clipPathUnits="objectBoundingBox"><path d="M1,1 H0 V0.225 C0,0.225,0.238,0.277,0.503,0.246 C0.767,0.216,1,0.109,1,0.109 V1"></path></clipPath>
	</svg>
	<svg class="svg">
	<clipPath id="bannerShapeTop" clipPathUnits="objectBoundingBox"><path d="M1,0.332 C0.621,0.995,0.393,1,0,0.905 L0,0.827 C0,0.827,0.22,0.956,0.484,0.82 C0.749,0.685,1,0.005,1,0.005 L1,0.332"></path></clipPath>
	</svg>	

	<script src="./js/uikit.min.js"></script>
	<script src="./js/nbkit.min.js"></script>
	<script src="./js/mmenu.js"></script>
	<script src="./js/main.js"></script>
</body>
</html>
