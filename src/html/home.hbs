{{#> main}}
	{{#*inline "main"}}

	{{#> ukContainer}}
		{{#*inline "out"}}
			<h1 class="uk-hidden@s uk-text-bold">{{page.h1}}</h1>
		{{/inline}}
	{{/ukContainer}}	

	{{> switch}}

	<section class="uk-section about">
		{{#> ukContainer}}
			{{#*inline "out"}}
			<p class="uk-text-uppercase uk-text-secondary uk-margin-small-bottom label" data-uk-scrollspy="cls: uk-animation-fade; delay: 300">our story</p>
			{{#> ukGrid class="uk-child-width-1-2@m"}}
				{{#*inline "cells"}}
					<div>
						<h2>Scotland’s leading freight and logistics operators</h2>
					</div>
					<div class="uk-flex uk-flex-right uk-flex-bottom">
						<p class="uk-text-lead">For over 40 years, Streamline Shipping Group has provided unrivalled shipping, freight and transport solutions across Scotland, the wider UK and around the world.</p>
					</div>
					<div class="uk-hidden@s">
						<p>We work with clients of all sizes and in all locations – from specialised sea freight transport to the north of Scotland, Orkney and Shetland to international freight forwarding across the globe.</p>
					</div>					
					<div class="uk-flex uk-flex-bottom">
						<div class="uk-flex uk-flex-wrap">
							<div class="uk-margin-small-top" data-uk-lightbox>
								<a class="uk-button uk-button-primary uk-button-large uk-box-shadow-medium" href="https://youtu.be/jmOuxZAJifA" data-caption="Company Video">
									{{> renderIcon name="play" class="icon-left"}}
									Company Video
								</a>
							</div>
							<div class="uk-margin-small-top">
								{{> ukButton link="#" label="Find out more about us" icon="arrow-right"}}
							</div>
						</div>						
					</div>
					<div class="uk-visible@s">
						<p>We work with clients of all sizes and in all locations – from specialised sea freight transport to the north of Scotland, Orkney and Shetland to international freight forwarding across the globe.</p>
					</div>					
				{{/inline}}
			{{/ukGrid}}		
			{{/inline}}
		{{/ukContainer}}
		{{> items type="images" items=page.about.images gridClass="uk-grid-small uk-child-width-1-5@s uk-child-width-1-2"}}
		{{#> ukContainer}}
			{{#*inline "out"}}
			{{> items type="numbers" items=page.about.numbers gridClass="uk-grid-collapse uk-child-width-1-4@m uk-child-width-1-2@s"}}	
			{{/inline}}
		{{/ukContainer}}			
	</section>

	{{#> ukSection label="our services" heading="Streamline offers a range of haulage, shipping and freight logistics services" sectionClass="services" buttonLabel="View all our services"}}
		{{#*inline "out"}}
			{{> items type="services" items=page.services gridClass="uk-grid-collapse uk-child-width-1-4@l uk-child-width-1-2@s"}}
		{{/inline}}
	{{/ukSection}}

	<section class="uk-section sectors">
		{{#> ukContainer}}
			{{#*inline "out"}}
			<p class="uk-text-uppercase uk-text-secondary uk-margin-small-bottom label" data-uk-scrollspy="cls: uk-animation-fade; delay: 300">our sectors</p>
			{{#> ukGrid class="uk-child-width-1-2@m" dataUkScrollspy="cls: uk-animation-fade; delay: 350; target: .uk-grid>div"}}
				{{#*inline "cells"}}
					<div>
						<h2>We’re experts in complex and difficult jobs</h2>
					</div>
					<div class="uk-flex uk-flex-bottom uk-flex-right">
						{{> ukButton link="#" label="View all our sectors" size="large" icon="arrow-right"}}					
					</div>
				{{/inline}}
			{{/ukGrid}}		
			{{/inline}}
		{{/ukContainer}}
		{{> items type="image-links" items=page.sectors.imageLinks gridClass="uk-grid-small uk-child-width-1-5@l uk-child-width-1-3@m uk-child-width-1-2@s"}}
		{{#> ukContainer}}
			{{#*inline "out"}}
			{{> items type="links" items=page.sectors.links gridClass="uk-grid-medium uk-child-width-1-2@m" itemLabel="Other sectors"}}	
			{{/inline}}
		{{/ukContainer}}		
	</section>
	
	{{#> ukSection label="Latest news" heading="Read our latest news headlines" sectionClass="news" buttonLabel="View all news"}}
		{{#*inline "out"}}
			{{> nbItems items=items.posts}}
		{{/inline}}
	{{/ukSection}}

	{{/inline}}
{{/main}}
